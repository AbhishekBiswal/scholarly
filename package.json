{
  "name": "scholarly",
  "version": "1.0.4",
  "description": "A library to query and parse academic articles from Google Scholar and Microsoft Academic",
  "main": "./dist/lib/index.js",
  "types": "./dist/lib/index.d.ts",
  "scripts": {
    "test": "nyc ava",
    "build": "tsc",
    "tsc:w": "tsc -w",
    "start": "npm run build && node .",
    "report-coverage": "nyc report --reporter=text-lcov > coverage/coverage.lcov && codecov"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ukalwa/scholarly.git"
  },
  "keywords": [
    "google",
    "scholar",
    "publications",
    "research",
    "academic",
    "parser"
  ],
  "author": "Upender Kalwa",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ukalwa/scholarly/issues"
  },
  "homepage": "https://github.com/ukalwa/scholarly#readme",
  "devDependencies": {
    "@types/cheerio": "^0.22.18",
    "ava": "^3.8.1",
    "codecov": "^3.6.5",
    "nyc": "^15.0.1",
    "ts-node": "^8.10.1",
    "typescript": "^3.8.3"
  },
  "dependencies": {
    "axios": "^0.19.2",
    "cheerio": "^1.0.0-rc.3"
  },
  "ava": {
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ]
  },
  "nyc": {
    "include": [
      "lib/**/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true
  }
}
