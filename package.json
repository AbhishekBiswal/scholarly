{
  "name": "scholarly",
  "version": "1.0.12",
  "description": "A library to query and parse academic articles from Google Scholar and Microsoft Academic",
  "main": "./dist/lib/index.js",
  "types": "./dist/lib/index.d.ts",
  "scripts": {
    "test": "npm run clean && nyc ava",
    "clean": "rimraf dist",
    "lint": "eslint ./lib/**/*.ts ./tests/**/*.ts --fix",
    "prebuild": "npm run lint && npm run test",
    "build": "npm run clean && tsc",
    "tsc:w": "tsc -w",
    "prepare": "npm run build",
    "report-coverage": "nyc report --reporter=text-lcov > coverage/coverage.lcov && codecov"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ukalwa/scholarly.git"
  },
  "keywords": [
    "google",
    "scholar",
    "publications",
    "research",
    "academic",
    "parser"
  ],
  "author": "Upender Kalwa",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ukalwa/scholarly/issues"
  },
  "homepage": "https://github.com/ukalwa/scholarly#readme",
  "devDependencies": {
    "@types/cheerio": "^0.22.18",
    "@typescript-eslint/eslint-plugin": "^2.31.0",
    "@typescript-eslint/parser": "^2.31.0",
    "ava": "^3.8.1",
    "codecov": "^3.6.5",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "nyc": "^15.0.1",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "ts-node": "^8.10.1",
    "typescript": "^3.8.3"
  },
  "dependencies": {
    "axios": "^0.19.2",
    "cheerio": "^1.0.0-rc.3"
  },
  "ava": {
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ]
  },
  "nyc": {
    "include": [
      "lib/**/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "files": [
    "dist/lib"
  ]
}
